<%- include ./partials/header %>
<link rel="stylesheet" href="/icofont/icofont.min.css">
<style>
    body {
        background: #f8f9fa !important;
    }

    .format {
        white-space: nowrap;
        overflow: hidden;
        text-overflow: ellipsis;
        text-transform: capitalize;
        display: block;
    }

    .form-control {
        padding: 5px 11px !important;
    }

    input[type=checkbox] {
        border: 1px solid #b4b9be;
        background: #fff;
        color: #555;
        clear: none;
        cursor: pointer;
        display: inline-block;
        line-height: 0;
        height: 16px;
        margin: -4px 4px 0 0;
        outline: 0;
        padding: 0 !important;
        text-align: center;
        vertical-align: middle;
        width: 16px;
        min-width: 16px;
        -webkit-appearance: none;
        box-shadow: inset 0 1px 2px rgba(0, 0, 0, 0.1);
        transition: 0.05s border-color ease-in-out;
    }

    input[type=checkbox]:checked:before {
        margin: 1px 0 0 -1px;
        color: #1e8cbe;
        content: "ï€Œ";
        font: normal normal normal 13px/1 FontAwesome;
    }
    .btn-bsa {
        background: #acbb16;
        color: #fff;
        transition: all ease-in-out .3s;
    }

    .btn-bsa:hover {
        background: #000;
        color: #fff;
    }
</style>
<%- include ./partials/sidebar %>
<!-- Content Body Start -->
<div class="content-body">
    <!-- Page Headings Start -->
    <div class="row justify-content-between align-items-center mb-10">

        <!-- Page Heading Start -->
        <div class="col-md-8 col-lg-auto mb-20">
            <div class="page-heading">
                <h3>Edit Subcategory: <span class="text-capitalize"><%= category.name %></span></h3>
                <p class="mt-3 text-dark">Permalink: <a href="<%= siteLink %>/category/<%= category.slug %>" target="_blank"><%= siteLink %>/category/<%= category.slug %></a></p>
            </div>
        </div><!-- Page Heading End -->

    </div><!-- Page Headings End -->
    <%- include ../partials/msg %>

    <div class="row ">

        <!--Manage Product List Start-->
        <div class="col-12">
            <form action="/category/edit" method="POST">
                <input type="hidden" name="categoryId" value="<%= category._id %>">
                <div class="table-responsive bg-white shadow-sm">
                    <div class="card">
                        <div class="card-header">
                            <b>Category Content</b>
                        </div>
                        <div class="card-body">
                            <div class="form-group">
                                <label for=""><b>Name*</b></label>
                                <input type="text" name="name" id="name" placeholder="Category Name" value="<%= category.name %>" class="form-control" required>
                            </div>
                            <div class="form-group mt-4">
                                    <label for=""><b>Parent Category*</b></label>
                                    <select name="parent" id="parent" class="form-control mb-4" required>
                                        <option selected value="<%= category.parent._id %>"><%- category.parent.name %></option>
                                        <% for(let item of category2) { %>
                                            <option value="<%= item._id %>"><%= item.name %></option>
                                        <% } %>
                                    </select>
                                </div>
                            <div class="form-group mt-4">
                                <label for=""><b>Slug*</b></label>
                                <input type="text" name="slug" id="slug" placeholder="Category Slug" class="form-control" value="<%= category.slug %>" required="true">
                            </div>
                            <div class="form-group mt-4">
                                <label for=""><b>Description</b></label>
                                <textarea name="description" id="description" cols="30" rows="10" class="form-control"><%= category.description %></textarea>
                            </div>
                            <div class="form-group mt-4">
                                <button class="btn btn-bsa">Update Subcategory</button>
                            </div>
                        </div>
                    </div>
                </div>
            </form>
        </div>
        <!--Manage Product List End-->
    </div>
</div><!-- Content Body End -->

<!-- Footer Section Start -->
<div class="footer-section">
    <div class="container-fluid">

        <div class="footer-copyright text-center">
            <p class="text-body-light">
                <script>document.write(new Date().getFullYear())</script> &copy; <a
                    href="<%= siteLink %>"><%= siteTitle %></a></p>
        </div>

    </div>
</div><!-- Footer Section End -->

